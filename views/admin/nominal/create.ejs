<%-include ../../partials/header.ejs %>
<%-include ../../partials/navbar.ejs %>
<%-include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active">Tambah Nominal</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Form tambah nominal</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/nominal/create" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Nama koin</label>
                            <select name="coinName" class="form-control select2" style="width: 100%;">
                                <option value="diamond" selected="selected">Diamond</option>
                                <option value="gold">Gold</option>
                                <option value="jewel">Jewel</option>
                            </select>
                        </div>
                        <div class="form-group">
                          <label for="coinQuantity">Jumlah koin</label>
                          <input type="number" name="coinQuantity" class="form-control" id="coinQuantity" placeholder="Jumlah koin">
                        </div>
                        <div class="form-group">
                            <label for="price">Harga</label>
                            <input type="number" name="price" class="form-control" id="price" placeholder="Harga">
                        </div>
                    </div>
                    
                    <!-- /.card-body -->
    
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                  </form>
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<%-include ../../partials/footer.ejs %>
<%-include ../../partials/js.ejs %>