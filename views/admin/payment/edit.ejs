<%-include ../../partials/header.ejs %>
<%-include ../../partials/navbar.ejs %>
<%-include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
              <li class="breadcrumb-item active">Edit Payment</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Form edit payment</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="post">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="type">Tipe pembayaran</label>
                        <input type="text" name="type" value="<%= payment.type %>" class="form-control" id="type" placeholder="Tipe pembayaran">
                      </div>
                      <div class="form-group">
                        <label>Nama Bank</label>
                        <div class="select2-purple">
                          <select class="form-control select2" multiple="multiple" data-placeholder="Pilih bank" style="width: 100%;" name="banks" required>
                            <% banks.forEach(bank=>{ %>
                            <option value="<%= bank._id %>" <% payment.banks.forEach(paymentBank=>{ %>
                              <%= (bank._id.toString() === paymentBank._id.toString())?"selected":"" %>
                              <% })%>
                              >
                              <%= bank.bankName %> <%= bank.name %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <!-- /.card-body -->
    
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                  </form>
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<%-include ../../partials/footer.ejs %>
<%-include ../../partials/js.ejs %>